{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Generate derived workspace",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/apply.py",
            "console": "integratedTerminal",
            "args": [
                "--generate-workspace"
            ]
        },
        {
            "name": "Push to remote hosts",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/apply.py",
            "console": "integratedTerminal",
            "args": [
                "--push", "--all"
            ]
        },
        {
            "name": "Push to local dotFiles",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/apply.py",
            "console": "integratedTerminal",
            "args": ["--push"]
        },
        {
            "name": "Bootstrap Windows Environment",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/apply.py",
            "console": "integratedTerminal",
            "args": [
                "--bootstrap-windows"
            ]
        },
        {
            "name": "Test fonts",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/verify_fonts.py",
            "console": "integratedTerminal",
            "args": []
        }
    ]
}