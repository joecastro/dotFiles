{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Generate derived workspace",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/apply.py",
            "console": "integratedTerminal",
            "args": [
                "--generate-workspace"
            ]
        },
        {
            "name": "Push to remote hosts",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/apply.py",
            "console": "integratedTerminal",
            "args": [
                "--push", "--all"
            ]
        },
        {
            "name": "Pull VS Code User settings",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/apply.py",
            "console": "integratedTerminal",
            "args": [ "--pull-vscode-settings" ]
        },
        {
            "name": "Push to local dotFiles",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/apply.py",
            "console": "integratedTerminal",
            "args": ["--push", "--local"]
        },
        {
            "name": "Push iTerm2 Settings",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/apply.py",
            "console": "integratedTerminal",
            "args": ["--push-iterm2-prefs"]
        },
        {
            "name": "Snapshot iTerm2 Settings",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/apply.py",
            "console": "integratedTerminal",
            "args": ["--snapshot-iterm2-prefs-json"]
        },
        {
            "name": "Compare iTerm2 Settings",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/apply.py",
            "console": "integratedTerminal",
            "args": ["--compare-iterm2-prefs"]
        },
        {
            "name": "Bootstrap Windows Environment",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/apply.py",
            "console": "integratedTerminal",
            "args": [
                "--bootstrap-windows"
            ]
        },
        {
            "name": "Test fonts",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/verify_fonts.py",
            "console": "integratedTerminal",
            "args": []
        }
    ]
}